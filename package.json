{
  "name": "tiny-ui",
  "version": "1.0.0",
  "description": "TINYpulse Front-end framework",
  "scripts": {
    "build": "node node_modules/gulp/bin/gulp build",
    "watch": "node node_modules/gulp/bin/gulp",
    "release-major": "node node_modules/gulp/bin/gulp release --major",
    "release-minor": "node node_modules/gulp/bin/gulp release --minor",
    "release-patch": "node node_modules/gulp/bin/gulp release --patch",
    "postinstall": "npm run build",
    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.conf.js  --single-run",
    "local-test": "node node_modules/karma/bin/karma start test/karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TINYhr/tinypulse-chrome.git"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-bump": "^1.0.0",
    "gulp-cssmin": "^0.1.7",
    "gulp-sass": "^2.2.0",
    "gulp-uglify": "^1.5.3",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.21",
    "karma-chrome-launcher": "^0.2.2",
    "karma-jasmine": "^0.3.7",
    "semver": "^5.1.0",
    "yargs": "^4.2.0"
  }
}
